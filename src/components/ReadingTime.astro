---
interface Props {
  content: string;
}

const { content } = Astro.props;

// Calculate reading time
const wordsPerMinute = 200;
const words = content.split(/\s+/).length;
const minutes = Math.ceil(words / wordsPerMinute);
---

<span class="reading-time">
  {minutes} min read
</span>

<style>
  .reading-time {
    font-size: 0.9rem;
    color: #666;
    font-style: italic;
  }
</style> 